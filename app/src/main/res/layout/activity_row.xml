<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="9dp"
        >

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/imageTv"
            android:src="@drawable/amst_circle"
            android:layout_marginRight="15dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleTv"
            android:text="Amsterdam"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_toRightOf="@+id/imageTv"
            android:layout_toEndOf="@id/imageTv"
            android:paddingBottom="8sp"
            android:paddingTop="8sp"
            android:layout_marginStart="10dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/descTv"
            android:layout_toEndOf="@+id/titleTv"
            android:text="The largest city on the Adriatic Coast, seaside delight Split has been under Roman, Venetian, Austrian, French, Italian and Yugoslav control. There is an abundance of restaurants and wine cellars. Sites such as Diocletian's Palace and Mausoleum, the Grgur Ninski Statue and the Cathedral and Bell Tower of St. Domnius justify its position as a UNESCO-designated World Heritage Site. The city's coves offer several lovely beaches, including central Bacvice. Ferries link Split to Dalmatian summer resorts."
            android:visibility="invisible"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionTv"
            android:text="Netherlands"
            android:textSize="17sp"
            android:textColor="@color/colorPrimary"
            android:layout_toRightOf="@+id/imageTv"
            android:layout_toEndOf="@id/imageTv"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/titleTv"/>

 <!-- Model class -->
    </RelativeLayout>

</androidx.cardview.widget.CardView>